      "data": {
        "Uno": "One"
      }
    },
    {
      "type": "vocabulary",
      "item_id": "L24_V10",
      "data": {
        "Dos": "Two"
      }
    },
    {
      "type": "vocabulary",
      "item_id": "L24_V11",
      "data": {
        "Tres": "Three"
      }
    },
    {
      "type": "vocabulary",
      "item_id": "L24_V12",
      "data": {
        "Cuatro": "Four"
      }
    },
    {
      "type": "vocabulary",
      "item_id": "L24_V13",
      "data": {
        "Cinco": "Five"
      }
    },
    {
      "type": "vocabulary",
      "item_id": "L24_V14",
      "data": {
        "Seis": "Six"
      }
    },
    {
      "type": "vocabulary",
      "item_id": "L24_V15",
      "data": {
        "Siete": "Seven"
      }
    },
    {
      "type": "vocabulary",
      "item_id": "L24_V16",
      "data": {
        "Ocho": "Eight"
      }
    },
    {
      "type": "vocabulary",
      "item_id": "L24_V17",
      "data": {
        "Nueve": "Nine"
      }
    },
    {
      "type": "expression",
      "item_id": "L24_E11",
      "data": {
        "phrase": "Gracias",
        "meaning": "Thank you"
      }
    },
    {
      "type": "expression",
      "item_id": "L24_E12",
      "data": {
        "phrase": "Adiós",
        "meaning": "Goodbye"
      }
    },
    {
      "type": "interactive_scenario",
      "scenario_id": "L24_S03",
      "title": "Finishing the Message",
      "setting": "You're wrapping up the voicemail with your contact information and a closing.",
      "conversation_flow": [
        {
          "title": "Ask for a call back"
        },
        {
          "title": "State your phone number"
        },
        {
          "title": "Thank them and say goodbye"
        },
        {
